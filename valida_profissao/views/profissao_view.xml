        <record id="view_profession_form" model="ir.ui.view">
            <field name="name">view.profession.form</field>
            <field name="model">res.profession</field>
            <field name="arch" type="xml">
                <form string="ProfissÃ£o">
                    <sheet>
                        <group>
                            <field name="name"/>
