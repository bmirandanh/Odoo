<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inclua o recurso CSS no frontend -->
        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/modelo_de_cursos_e_matricula/static/src/css/custom_styles.css"/>
            </xpath>
        </template>
        
        <!-- Inclua o recurso CSS no backend (administração) -->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/modelo_de_cursos_e_matricula/static/src/css/custom_styles.css"/>
            </xpath>
        </template>
    </data>
</odoo>